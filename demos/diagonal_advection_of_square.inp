ocellaris:
    type: input
    version: 1.0
    
metadata:
    author: Tormod Landet
    date: 2014-12-19
    description: |
        Diagonal advection of an initially square blob of colour function in
        an analytical velocity field which is pointed with 45 degrees to the
        axes 

physical_properties:
    rho0: 1.0
    nu0: 1.0
    rho1: 1.0
    nu1: 1.0

# Structured mesh
mesh:
    type: Rectangle
    Nx: 64
    Ny: 64
    endx: 1.5
    endy: 1.5
    diagonal: left/right

# Unstructured mesh
_mesh:
    type: XML
    mesh_file: square_120.xml

boundary_conditions:
-   name: all
    selector: code
    inside_code: on_boundary
    #c:
    #    type: ConstantValue
    #    value: 0

initial_conditions:
    up0:
        cpp_code: 't < 0.5 ? 1.0 : -1.0'
    up1:
        cpp_code: 't < 0.5 ? 1.0 : -1.0'
    p:
        cpp_code: 0
    cp:
        cpp_code: '(0.25 <= x[0] && x[0] <= 0.5 && 0.25 <= x[1] && x[1] <= 0.5) ? 1.0 : 0.0'

time:
    dt: 0.001
    tmax: 1.0

output:
    prefix: output/diagonal_advection_of_square_DG1_upwind
    log_name: .log
    dolfin_log_level: warning
    ocellaris_log_level: info
    xdmf_write_interval: 10

multiphase_solver:
    type: BlendedAlgebraicVOF
    function_space_colour: DG
    polynomial_degree_colour: 1

solver:
    type: AnalyticalSolution
    function_space_velocity: DG
    function_space_pressure: DG
    polynomial_degree_velocity: 2
    polynomial_degree_pressure: 1

convection:
    c:
        convection_scheme: Upwind
        #HRIC_version: HRIC

slope_limiter:
    c:
        method: HierarchicalTaylor
        plot: yes
        skip_boundary: no
        enforce_bounds: yes

probes:
    -   name: c=0.5
        type: IsoSurface
        value: 0.5
        field: c
        file_name: '_c05.out'
        show_interval: 1
        xlim: [0, 1.5]
        ylim: [0, 1.5]
    -   name: c=0.1
        type: IsoSurface
        value: 0.1
        field: c
        file_name: '_c01.out'
        enabled: no
    -   name: c=0.9
        type: IsoSurface
        value: 0.9
        field: c
        file_name: '_c09.out'
        enabled: no
