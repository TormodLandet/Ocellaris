{
    "program": "ocellaris",
    "type": "input",
    "version": 1.0,
    
    "physical_properties": {
        "rho0": 1.0,
        "nu0": 0.025,
        "g": [0, 0]
    },
    
    "mesh": {
        "type": "Rectangle",
        "Nx": 32,
        "Ny": 32
    },
    
    "boundary_conditions": [
        {
            "name": "walls",
            "selector": "region",
            "region_code": "True",
            
            "p": {
                "type": "ConstantGradient",
                "value": 0
            },
            "u": {
                "type": "ConstantValue",
                "value": [0, 0]
            }
        },
        {
            "name": "lid",
            "selector": "region",
            "region_code": "x[1] >= 1.0 - 1e-8",
            
            "p": {
                "type": "ConstantGradient",
                "value": 0
            },
            "u": {
                "type": "ConstantValue",
                "value": [1, 0]
            }
        }
    ],
    
    "time": {
        "dt": 0.005,
        "tmax": 1.0   
    },
    
    "output": {
        "plot_at_end": true,
        "dolfin_log_level": "warning",
        "ocellaris_log_level": "info"
    },
    
    "solver": {
        "type": "IPCS",
        "num_inner_iter": 3,
        "polynomial_degree_velocity": 1,
        "polynomial_degree_pressure": 1
    },
    
    "convection": {
        "u": {
            "convection_scheme": "Upwind"
        }
    }
}
