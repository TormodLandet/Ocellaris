{
    "program": "ocellaris",
    "type": "input",
    "version": 1.0,
    
    "physical_properties": {
        "rho0": 1.0,
        "nu0": 0.001,
        "g": [0, 0]
    },
    
    "mesh": {
        "type": "Rectangle",
        "Nx": 64,
        "Ny": 64
    },
    
    "boundary_conditions": [
        {
            "name": "walls",
            "selector": "region",
            "region_code": "True",
            
            "p": {
                "type": "ConstantGradient",
                "value": 0
            },
            "u": {
                "type": "ConstantValue",
                "value": [0, 0]
            }
        },
        {
            "name": "lid",
            "selector": "region",
            "region_code": "x[1] >= 1.0 - 1e-8",
            
            "p": {
                "type": "ConstantGradient",
                "value": 0
            },
            "u": {
                "type": "ConstantValue",
                "value": [1, 0]
            }
        }
    ],
    
    "time": {
        "dt": 0.05,
        "tmax": 60.0   
    },
    
    "output": {
        "plot_at_end": true,
        "dolfin_log_level": "warning",
        "ocellaris_log_level": "info"
    },
    
    "solver": {
        "type": "IPCS",
        "num_inner_iter": 3,
        "function_space_velocity": "CG",
        "function_space_pressure": "CG",
        "polynomial_degree_velocity": 2,
        "polynomial_degree_pressure": 1
    },
    
    "convection": {
        "u": {
            "convection_scheme": "Upwind"
        }
    },
    
    "probes": [
        {
            "name": "u-vel center",
            "type": "LineProbe",
            "startpos": [0.5, 0],
            "endpos": [0.5, 1],
            "Npoints": 100,
            "field": "u0",
            "show_interval": 10,
            "target_name": "Ghia et al",
